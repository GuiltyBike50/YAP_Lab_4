#include <iostream>
#include <string>
using namespace std;

class String
{
private:
    char *value;
    int len;
public:
    String()
    {
        value = new char[1];
        len = 0;
        value[0] = '\0';
    }

    String(string str)
    {
        len = str.length();
        value = new char[len+1];
        for (int i=0; i<=len; i++) {
            value[i]=str[i];
        }
    }

    String(const String& s)
    {
        len=s.len;
        value = new char[len+1];
        for (int i=0; i<=len; i++) {
            value[i]=s.value[i];
        }
    }

    friend ostream& operator<<(ostream& outputStream, const String & s);

    ~String()
    {
        delete[] value;
    }

};

ostream& operator<<(ostream& outputStream, const String & s)
{
    return outputStream << s.value;
}

int main(int argc, char **argv)
{
    cout << "Введите строку" << endl;
    string stroka1;
    cin >> stroka1;
    String a(stroka1);

    cout << "Вывод строки инициализированной с помощью коструктора" << endl;
    cout << a << endl;

    return 0;
}
